                    <a href="@Url.Action("Index", "Product")" class="nav-item nav-link active">Home</a>
                    <a href="@Url.Action("Add", "Product")" class="nav-item nav-link active">Add Your Product</a>
                    <a href="@Url.Action("Index", "Dashboard")" class="nav-item nav-link active">Dashboard</a>
                    <a href="shop.html" class="nav-item nav-link">Shop</a>
                   

